= render "partials/navigation"
%p#notice= notice
.single-post
	.post-image-wrapper
		.post-image
			= image_tag @post.image.url(:large, class: 'img-responsive', :style=>"width: 100%;")
		.post-title
			= @post.title
	/ %p
	/   %b Image:
	  
	/ %p
	/   %b Subtitle:
	/   = @post.subtitle
	/ %p
	/   %b Body:
	/   = @post.body

	= link_to 'Edit', edit_post_path(@post)
	\|
	= link_to 'Back', posts_path
